# files needed to be compiled
SRC = newNode.c newBody.c display_tree.c deconstruct_tree.c subdivide.c contains.c insert.c count.c search.c levelorder.c mag.c difference.c force_summation.c xyt_data_particles.c xy_trees.c printdata.c enqueue.c dequeue.c queue_empty.c bhtd.c

# compilation options
CC = gcc -g
CFLAGS = --std=c99
LN = -lm

# resulting program
BIN = td

OBJ = $(SRC:.c=.o)

${BIN} : ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${BIN} ${LN}

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean :
	rm -f ${OBJ} ${BIN}

# Some dependencies
bhtd.o : newNode.o newBody.o display_tree.o deconstruct_tree.o subdivide.o contains.o insert.o count.o search.o levelorder.o mag.o difference.o force_summation.o xyt_data_particles.o xy_trees.o bhHeaders.h

newNode.o : bhHeaders.h
newBody.o : bhHeaders.h
display_tree.o : bhHeaders.h
deconstruct_tree.o : bhHeaders.h
subdivide.o : bhHeaders.h 
contains.o : bhHeaders.h
insert.o : bhHeaders.h
count.o : bhHeaders.h
search.o : bhHeaders.h
levelorder.o : bhHeaders.h
mag.o : bhHeaders.h
difference.o : bhHeaders.h
force_summation.o : bhHeaders.h
xyt_data_particles.o : bhHeaders.h
xy_trees.o : bhHeaders.h
enqueue.o : bhHeaders.h
dequeue.o : bhHeaders.h
queue_empty.o : bhHeaders.h
printdata.o : bhHeaders.h

